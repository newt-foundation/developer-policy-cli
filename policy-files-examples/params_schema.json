{
  "type": "object",
  "description": "policy structure: admin address, allowed_actions and token_whitelist",
  "required": ["admin", "allowed_actions", "token_whitelist"],
  "properties": {
    "admin": {
      "type": "string",
      "description": "Admin address"
    },
    "allowed_actions": {
      "type": "object",
      "description": "Allowed actions",
      "additionalProperties": {
        "type": "object",
        "description": "chain id to action type mapping",
        "properties": {
          "address": {
            "type": "string",
            "description": "Contract address"
          },
          "function_name": {
            "type": "string",
            "description": "Function name"
          },
          "max_limit": {
            "type": "number",
            "description": "Max limit"
          }
        },
        "required": ["address", "function_name", "max_limit"],
        "additionalProperties": false
      }
    },
    "token_whitelist": {
      "type": "object",
      "description": "Token whitelist",
      "additionalProperties": {
        "type": "object",
        "description": "Chain id to token mapping",
        "properties": {
          "address": {
            "type": "string",
            "description": "Contract address"
          },
          "max_limit": {
            "type": "number",
            "description": "Max limit"
          },
          "symbol": {
            "type": "string",
            "description": "Symbol"
          }
        },
        "required": ["address", "max_limit", "symbol"],
        "additionalProperties": false
      }
    }
  }
}